{
  "name": "root",
  "private": true,
  "repository": "git@github.com:withfig/macos",
  "author": "Fig Team",
  "license": "MIT",
  "packageManager": "pnpm@9.1.4",
  "scripts": {
    "build": "turbo build",
    "b": "turbo build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "dev": "turbo dev",
    "dev:autocomplete": "pnpm -C apps/autocomplete dev",
    "dev:dashboard": "pnpm -C apps/dashboard dev",
    "preview:autocomplete": "pnpm -C apps/autocomplete preview",
    "preview:dashboard": "pnpm -C apps/dashboard preview",
    "clean": "turbo clean",
    "prepare": "husky install",
    "precommit": "lint-staged --config .lintstagedrc.mjs"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "prettier": "^3.2.5",
    "tsx": "^4.11.0",
    "turbo": "^2.0.1",
    "vitest": "^1.6.0"
  }
}
