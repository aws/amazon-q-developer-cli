{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["ESNext"],

    "declaration": true,
    "stripInternal": true,
    "sourceMap": true,
    "newLine": "lf",

    "experimentalDecorators": true,
    "esModuleInterop": true,

    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "build", "dist"]
}
