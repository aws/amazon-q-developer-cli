{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "rootDir": "./src/",
    "outDir": "./dist",
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": ["@internal/types", "@withfig/autocomplete-types"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
